<% if (title) { %>
<h1><%- title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %>

<form action="/inv/add-classification" method="post">
  <div class="form-group">
    <label for="classificationName">Classification Name:</label>
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      placeholder="Enter classification name"
    />
  </div>
  <div class="classification-explainer">
    Classification name cannot contain a space or special character of any kind
  </div>
  <button type="submit" class="classification-button">
    Add Classification
  </button>
</form>
