<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %> <%- messages() %>

<div class="add-classification-form">
  <form action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name:</label>

    <div class="classification-explainer">
      Classification name cannot contain a space or special character of any
      kind
    </div>

    <input
      type="text"
      id="classification_name"
      name="classification_name"
      value=""
      placeholder="Enter classification name"
      required
      pattern="^\S+$"
    />

    <button type="submit" class="classification-button">
      Add Classification
    </button>
  </form>
</div>
